<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ShortcutGuide.ShortcutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShortcutGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ShortcutTemplate" x:DataType="local:ShortcutTemplateDataObject">
            <Grid Margin="0,0,48,0" HorizontalAlignment="Left">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Grid.Row="1"
                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                        Text="{x:Bind Name}" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind Description}" />
                </StackPanel>

                <Border
                    Grid.Column="1"
                    Margin="0"
                    HorizontalAlignment="Right"
                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <ContentPresenter
                        Padding="6,6,6,6"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource SystemAltHighColor}"
                        Content="{x:Bind Shortcut}"
                        CornerRadius="{ThemeResource ControlCornerRadius}" />
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SelectorBar x:Name="CategorySelector" Grid.Row="0" />
        <TextBlock
            x:Name="ErrorMessage"
            Grid.Row="1"
            Style="{StaticResource SubheaderTextBlockStyle}" />
        <ScrollViewer x:Name="ShortcutsScrollViewer" Grid.Row="1">
            <Grid
                Margin="12"
                Padding="12"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}">
                <StackPanel
                    x:Name="OverviewStackPanel"
                    Height="{Binding ContentHeight}"
                    Orientation="Horizontal">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="PinnedListTitle"
                            x:Uid="PinnedListTitle"
                            Grid.Row="0"
                            Style="{ThemeResource SubtitleTextBlockStyle}" />
                        <ListView
                            x:Name="PinnedListElement"
                            Grid.Row="1"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None" />
                    </Grid>
                    <StackPanel>
                        <TextBlock
                            x:Name="RecommendedListTitle"
                            x:Uid="RecommendedListTitle"
                            Style="{ThemeResource SubtitleTextBlockStyle}" />
                        <ListView
                            x:Name="RecommendedListElement"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock
                            x:Name="TaskbarLaunchShortcutsTitle"
                            x:Uid="TaskbarLaunchShortcutsTitle"
                            Style="{ThemeResource SubtitleTextBlockStyle}" />
                        <TextBlock x:Name="TaskbarLaunchShortcutsDescription" x:Uid="TaskbarLaunchShortcutsDescription" />
                        <ListView
                            x:Name="TaskbarLaunchShortcutsListElement"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None" />
                    </StackPanel>
                </StackPanel>
                <ListView
                    x:Name="ShortcutListElement"
                    ItemTemplate="{StaticResource ShortcutTemplate}"
                    SelectionMode="None" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
