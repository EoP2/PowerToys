<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ShortcutGuide.ShortcutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShortcutGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ShortcutTemplate" x:DataType="local:ShortcutTemplateDataObject">
            <Grid MinWidth="400" HorizontalAlignment="Left">
                <Grid.ContextFlyout>
                    <MenuFlyout Opening="MenuFlyout_Opening">
                        <MenuFlyoutItem Click="PinShortcut" Text="Pin" />
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="6,0,6,0"
                    Padding="6,0,6,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                    Text="{x:Bind Name}" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="20,6,6,6"
                    HorizontalAlignment="Right"
                    BorderThickness="{ThemeResource ButtonBorderThemeThickness}">
                    <ContentPresenter
                        Padding="6,6,6,6"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource SystemAltHighColor}"
                        Content="{x:Bind Shortcut}"
                        CornerRadius="{ThemeResource ControlCornerRadius}" />
                </Border>
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="6,0,6,0"
                    Padding="6,0,6,0"
                    Text="{x:Bind Description}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SelectorBar x:Name="CategorySelector" Grid.Row="0" />
        <TextBlock
            x:Name="ErrorMessage"
            Grid.Row="1"
            Margin="6,0,6,0"
            Style="{StaticResource SubheaderTextBlockStyle}" />
        <ScrollViewer
            Grid.Row="1"
            x:Name="ShortcutsScrollViewer"
            HorizontalScrollBarVisibility="Visible"
            HorizontalScrollMode="Enabled"
            VerticalScrollBarVisibility="Disabled"
            VerticalScrollMode="Disabled">
            <Grid>
                <StackPanel
                    x:Name="OverviewStackPanel"
                    Height="{Binding ContentHeight}"
                    Orientation="Horizontal">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="PinnedListTitle"
                            x:Uid="PinnedListTitle"
                            Grid.Row="0"
                            Margin="6,0,6,0"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                        <GridView
                            x:Name="PinnedListElement"
                            Grid.Row="1"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </Grid>
                    <StackPanel>
                        <TextBlock
                            x:Name="RecommendedListTitle"
                            x:Uid="RecommendedListTitle"
                            Margin="6,0,6,0"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                        <GridView
                            x:Name="RecommendedListElement"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock
                            x:Name="TaskbarLaunchShortcutsTitle"
                            x:Uid="TaskbarLaunchShortcutsTitle"
                            Margin="6,0,6,0"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                        <TextBlock
                            x:Name="TaskbarLaunchShortcutsDescription"
                            x:Uid="TaskbarLaunchShortcutsDescription"
                            Margin="6,0,6,0" />
                        <GridView
                            x:Name="TaskbarLaunchShortcutsListElement"
                            ItemTemplate="{StaticResource ShortcutTemplate}"
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </StackPanel>

                </StackPanel>
                <GridView
                    x:Name="ShortcutListElement"
                    Height="{Binding ContentHeight}"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    ItemTemplate="{StaticResource ShortcutTemplate}"
                    SelectionMode="None">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid HorizontalAlignment="Left" Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>
        </ScrollViewer>
        <Canvas
            x:Name="TaskbarIndicators"
            Grid.Row="2"
            Height="20"
            Visibility="Collapsed">
            <local:TaskbarIndicator IndicatorNumber="1" />
            <local:TaskbarIndicator IndicatorNumber="2" />
            <local:TaskbarIndicator IndicatorNumber="3" />
            <local:TaskbarIndicator IndicatorNumber="4" />
            <local:TaskbarIndicator IndicatorNumber="5" />
            <local:TaskbarIndicator IndicatorNumber="6" />
            <local:TaskbarIndicator IndicatorNumber="7" />
            <local:TaskbarIndicator IndicatorNumber="8" />
            <local:TaskbarIndicator IndicatorNumber="9" />
            <local:TaskbarIndicator IndicatorNumber="10" />
        </Canvas>
    </Grid>
</Page>
