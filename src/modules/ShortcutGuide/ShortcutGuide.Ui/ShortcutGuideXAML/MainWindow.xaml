<?xml version="1.0" encoding="utf-8" ?>
<winuiex:WindowEx
    x:Class="ShortcutGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    IsMaximizable="False"
    IsMinimizable="False"
    IsResizable="False"
    mc:Ignorable="d">
    <!--  IsShownInSwitchers="False"  -->
    <winuiex:WindowEx.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </winuiex:WindowEx.SystemBackdrop>
    <Page x:Name="MainPage">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TitleBar Title="Shortcut Guide">
                <TitleBar.Content>
                    <TextBox
                        x:Name="SearchBox"
                        x:Uid="SearchBox"
                        Width="300"
                        VerticalAlignment="Center"
                        TextChanged="SearchBox_TextChanged">
                        <TextBox.KeyboardAccelerators>
                            <KeyboardAccelerator
                                Key="F"
                                Invoked="SearchBox_KeyboardAcceleratorInvoked"
                                Modifiers="Control" />
                        </TextBox.KeyboardAccelerators>
                    </TextBox>
                </TitleBar.Content>
            </TitleBar>

            <NavigationView
                x:Name="WindowSelector"
                Grid.Row="1"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                SelectionChanged="WindowSelector_SelectionChanged"
                Style="{StaticResource RailNavigationViewStyle}">
                <NavigationView.MenuItems />
                <NavigationView.FooterMenuItems>
                    <NavigationViewItem
                        Content="Settings"
                        Icon="Setting"
                        SelectsOnInvoked="False"
                        Tag="Settings"
                        Tapped="Settings_Tapped" />
                </NavigationView.FooterMenuItems>
                <NavigationView
                    x:Name="OtherNavView"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    PaneDisplayMode="Top"
                    SelectionChanged="OtherNavView_SelectionChanged">
                    <Frame
                        x:Name="ContentFrame"
                        Margin="18,8,0,0"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8,0,0,0" />
                </NavigationView>

                <NavigationView.Resources>
                    <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                    <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                </NavigationView.Resources>
            </NavigationView>

            <!--<TeachingTip
                x:Name="InformationTip"
                x:Uid="InformationTip"
                Target="{x:Bind InformationButton}">
                <StackPanel>
                    <TextBlock
                        x:Uid="InformationTip1"
                        Margin="0,16,0,0"
                        TextWrapping="WrapWholeWords" />
                    <TextBlock
                        x:Uid="InformationTip2"
                        Margin="0,16,0,0"
                        TextWrapping="WrapWholeWords" />
                    <HyperlinkButton
                        x:Uid="ShowOOBE"
                        Margin="-8,0,0,0"
                        Click="HyperlinkButton_Click" />
                </StackPanel>
            </TeachingTip>-->
        </Grid>
    </Page>
</winuiex:WindowEx>
