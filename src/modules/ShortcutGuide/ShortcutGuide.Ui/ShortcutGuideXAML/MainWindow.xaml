<?xml version="1.0" encoding="utf-8" ?>
<winuiex:WindowEx
    x:Class="ShortcutGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    mc:Ignorable="d">
    <Page x:Name="MainPage">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <SelectorBar
                x:Name="WindowSelector"
                Grid.Row="0"
                Grid.Column="0"
                SelectionChanged="WindowSelectionChanged" />
            <Button
                x:Name="InformationButton"
                x:Uid="InformationButton"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,6,0"
                Click="InformationButton_Click">
                <FontIcon Glyph="&#xEA1F;" />
            </Button>
            <TeachingTip
                x:Name="InformationTip"
                x:Uid="InformationTip"
                Target="{x:Bind InformationButton}">
                <StackPanel>
                    <TextBlock
                        x:Uid="InformationTip1"
                        Margin="0,16,0,0"
                        TextWrapping="WrapWholeWords" />
                    <TextBlock
                        x:Uid="InformationTip2"
                        Margin="0,16,0,0"
                        TextWrapping="WrapWholeWords" />
                    <HyperlinkButton
                        x:Uid="ShowOOBE"
                        Margin="-8,0,0,0"
                        Click="HyperlinkButton_Click" />
                </StackPanel>
            </TeachingTip>
            <TextBox
                x:Name="SearchBox"
                x:Uid="SearchBox"
                Grid.Row="0"
                Grid.Column="2"
                Width="300"
                Height="32"
                Margin="0,0,6,0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                TextChanged="SearchBox_TextChanged">
                <TextBox.KeyboardAccelerators>
                    <KeyboardAccelerator
                        Key="F"
                        Invoked="SearchBox_KeyboardAcceleratorInvoked"
                        Modifiers="Control" />
                </TextBox.KeyboardAccelerators>
            </TextBox>
            <Button
                x:Uid="SettingsButton"
                Grid.Row="0"
                Grid.Column="3"
                Margin="0,0,6,0"
                HorizontalContentAlignment="Center"
                Click="SettingsButton_Clicked">
                <FontIcon Glyph="&#xE713;" />
            </Button>
            <Button
                x:Uid="CloseButton"
                Grid.Row="0"
                Grid.Column="4"
                Margin="0,0,6,0"
                HorizontalContentAlignment="Center"
                Click="CloseButton_Clicked">
                <FontIcon Glyph="&#xEF2C;" />
            </Button>
            <Frame
                x:Name="ContentFrame"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="5" />
        </Grid>
    </Page>
</winuiex:WindowEx>
