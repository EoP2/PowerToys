<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="ShortcutGuide.TaskbarIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShortcutGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas x:Name="IndicatorCanvas">
        <Border
            x:Name="IndicatorRectangle"
            Padding="0,0,0,0"
            BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            BorderThickness="1"
            CornerRadius="3,3,0,0">
            <Rectangle Fill="{ThemeResource SystemAccentColor}" />
        </Border>
        <TextBlock
            x:Name="IndicatorText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{ThemeResource TextOnAccentFillColorDefaultBrush}"
            Style="{ThemeResource BodyStrongTextBlockStyle}"
            TextAlignment="Center" />
    </Canvas>
</UserControl>
