<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ShortcutGuide.OOBEView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShortcutGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">

    <Page>
        <Page.Background>
            <ImageBrush
                x:Name="HeroImage"
                AlignmentX="Left"
                AlignmentY="Top"
                ImageSource="/Assets/ShortcutGuide/HeroImage.png"
                Stretch="None">
                <ImageBrush.Transform>
                    <CompositeTransform x:Name="HeroImageCompositeTransform" TranslateX="1200" />
                </ImageBrush.Transform>
            </ImageBrush>
        </Page.Background>
        <StackPanel
            x:Name="MainStackPanel"
            Margin="32,24"
            Spacing="12">
            <TextBlock
                x:Name="OOBETitle"
                x:Uid="OOBETitle"
                Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock
                x:Name="OOBEDescription1"
                x:Uid="OOBEDescription1"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                TextWrapping="WrapWholeWords" />
            <StackPanel x:Name="OOBEDescription1_1StackPanel" Orientation="Horizontal">
                <TextBlock Margin="0,0,8,0" Text="•" />
                <TextBlock x:Name="OOBEDescription1_1" x:Uid="OOBEDescription1_1" />
            </StackPanel>
            <StackPanel x:Name="OOBEDescription1_2StackPanel" Orientation="Horizontal">
                <TextBlock Margin="0,0,8,0" Text="•" />
                <TextBlock x:Name="OOBEDescription1_2" x:Uid="OOBEDescription1_2" />
            </StackPanel>
            <StackPanel x:Name="OOBEDescription1_3StackPanel" Orientation="Horizontal">
                <TextBlock Margin="0,0,8,0" Text="•" />
                <TextBlock x:Name="OOBEDescription1_3" x:Uid="OOBEDescription1_3" />
            </StackPanel>
            <StackPanel x:Name="OOBEDescription1_4StackPanel" Orientation="Horizontal">
                <TextBlock Margin="0,0,8,0" Text="•" />
                <TextBlock x:Name="OOBEDescription1_4" x:Uid="OOBEDescription1_4" />
            </StackPanel>
            <TextBlock
                x:Name="OOBEDescription2"
                x:Uid="OOBEDescription2"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                TextWrapping="WrapWholeWords" />
            <TextBlock
                x:Name="OOBEDescription3"
                x:Uid="OOBEDescription3"
                FontStyle="Italic"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                TextWrapping="WrapWholeWords" />
            <HyperlinkButton
                x:Name="OOBELeaveFeedback"
                x:Uid="OOBELeaveFeedback"
                Margin="-8,0,0,0"
                NavigateUri="https://aka.ms/PowerToysGiveFeedback" />
        </StackPanel>
    </Page>
</Page>
