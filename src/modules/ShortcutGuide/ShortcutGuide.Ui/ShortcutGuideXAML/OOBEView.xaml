<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ShortcutGuide.ShortcutGuideXAML.OOBEView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShortcutGuide.ShortcutGuideXAML"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Margin="32,24" Spacing="12">
        <TextBlock x:Uid="OOBETitle" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBlock
            x:Uid="OOBEDescription1"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextWrapping="WrapWholeWords" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,8,0" Text="•" />
            <TextBlock x:Uid="OOBEDescription1_1" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,8,0" Text="•" />
            <TextBlock x:Uid="OOBEDescription1_2" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,8,0" Text="•" />
            <TextBlock x:Uid="OOBEDescription1_3" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,8,0" Text="•" />
            <TextBlock x:Uid="OOBEDescription1_4" />
        </StackPanel>
        <TextBlock
            x:Uid="OOBEDescription2"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextWrapping="WrapWholeWords" />
        <TextBlock
            x:Uid="OOBEDescription3"
            FontStyle="Italic"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextWrapping="WrapWholeWords" />
        <HyperlinkButton
            x:Uid="OOBELeaveFeedback"
            Margin="-8,0,0,0"
            NavigateUri="https://aka.ms/PowerToysGiveFeedback" />
    </StackPanel>
</Page>
